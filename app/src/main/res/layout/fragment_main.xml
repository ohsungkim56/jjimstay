<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/framgnet_actionbar_center">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/fragment_navigation"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_back">

                    <Spinner
                        android:id="@+id/spinnerRelax"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/spinner_relax"
                        android:entries="@array/Relax"></Spinner>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_back">

                    <Spinner
                        android:id="@+id/spinnerActive"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:background="@drawable/spinner_active"
                        android:layout_gravity="center"
                        android:entries="@array/Active"></Spinner>
                </FrameLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>